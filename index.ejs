<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Artist Library</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Artist Library</h1>
      <nav>
        <a href="/" class="active">Home</a>
        <a href="/add">Add Book</a>
        <a href="/update-harry-potter" class="special-btn">Update Book ID 1 to Harry Potter</a>
        <a href="/delete-highest" class="danger-btn">Delete Highest ID Book</a>
      </nav>
    </header>
    
    <main>
      <h2>Book Collection</h2>
      
      <% if (books.length === 0) { %>
        <p class="no-books">No books in the library. Add some!</p>
      <% } else { %>
        <table class="book-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Author</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach(book => { %>
              <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td class="actions">
                  <a href="/edit/<%= book.id %>" class="edit-btn">Edit</a>
                  <a href="/delete/<%= book.id %>" class="delete-btn">Delete</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </main>
    
    <footer>
      <p>Â© 2025 Artist Library</p>
    </footer>
  </div>
</body>
</html>